{
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "paths": {
      "rxjs" : ["node_modules/rxjs"],
      "@angular/http" : ["node_modules/@angular/http"]
    },
    "declaration": false,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "rootDir": ".",
    "outDir": "./dist",
    "noEmitOnError": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom",
      "es5",
      "es6",
      "scripthost"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "core-js",
      "jasmine"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
