{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "rxjs" : ["node_modules/rxjs"],
      "@angular/http" : ["node_modules/@angular/http"]
    },
    "declaration": false,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "rootDir": ".",
    "outDir": "./dist",
    "noEmitOnError": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "dom",
      "es5",
      "es6",
      "scripthost"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "core-js",
      "bluebird",
      "body-parser",
      "chai",
      "chai-as-promised",
      "config",
      "express",
      "express-serve-static-core",
      "js-yaml",
      "lodash",
      "mocha",
      "node",
      "promises-a-plus",
      "sinon",
      "sinon-as-promised",
      "superagent",
      "supertest",
      "when"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
