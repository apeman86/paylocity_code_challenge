{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "rxjs" : ["node_modules/rxjs"],
      "@angular/http" : ["node_modules/@angular/http"]
    },
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": ".",
    "outDir": "test-dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "core-js",
      "jasmine"
    ],
    "lib": [
      "dom",
      "es7"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
